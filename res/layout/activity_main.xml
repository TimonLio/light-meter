<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_lcd_background"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="16dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="6dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_label_lux"
                    android:textColor="@android:color/black"
                    android:textSize="12dp" />
            </FrameLayout>

            <TextView
                android:id="@+id/main_lux_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="--"
                android:textColor="@android:color/black"
                android:textSize="16dp" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_label_ev"
                    android:textColor="@android:color/black"
                    android:textSize="12dp" />
            </FrameLayout>

            <TextView
                android:id="@+id/main_ev_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="--"
                android:textColor="@android:color/black"
                android:textSize="16dp" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_label_iso"
                    android:textColor="@android:color/black"
                    android:textSize="12dp" />
            </FrameLayout>

            <Spinner
                android:id="@+id/main_iso_value"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal" >

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp" >

                <TextView
                    android:id="@+id/main_shutter_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@drawable/main_lcd_text_border_selector"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="T"
                    android:textColor="@android:color/black"
                    android:textSize="12dp" />
            </FrameLayout>

            <Spinner
                android:id="@+id/main_shutter_value"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal" >

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp" >

                <TextView
                    android:id="@+id/main_aperture_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@drawable/main_lcd_text_border_selector"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="F"
                    android:textColor="@android:color/black"
                    android:textSize="12dp" />
            </FrameLayout>

            <Spinner
                android:id="@+id/main_aperture_value"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.8" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="6dp"
        android:layout_weight="1" >

        <Button
            android:id="@+id/main_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/main_button_measure" >
        </Button>

        <ImageView
            android:id="@+id/main_button_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/main_button_dot_selector" >
        </ImageView>
    </FrameLayout>

</LinearLayout>