<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="@string/conf_category_title" >
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="CONF_ENABLE_TRACKING"
            android:summary="@string/conf_enable_tracking_summary"
            android:title="@string/conf_enable_tracking" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="CONF_ENABLE_KEEP_SCREEN_ON"
            android:summary="@string/conf_enable_keep_screen_on_summary"
            android:title="@string/conf_enable_keep_screen_on" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="CONF_ENABLE_VOLUME_KEY"
            android:summary="@string/conf_enable_volume_key_summary"
            android:title="@string/conf_enable_volume_key" />

        <ListPreference
            android:defaultValue="2"
            android:dialogTitle="@string/dlg_ev_step_title"
            android:entries="@array/pref_ev_step"
            android:entryValues="@array/pref_ev_step_value"
            android:key="CONF_EV_STEP"
            android:summary="@string/conf_ev_step_summary"
            android:title="@string/conf_ev_step" />
    </PreferenceCategory>

</PreferenceScreen>