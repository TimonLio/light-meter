<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/app_name" >

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="CONF_SHOW_SPLASH"
        android:summary="@string/conf_show_splash_summary"
        android:title="@string/conf_show_splash" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="CONF_ALLOW_LOCK_SCREEN"
        android:summary="@string/conf_allow_lock_screen_summary"
        android:title="@string/conf_allow_lock_screen" />
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="CONF_ALLOW_TRACKING"
        android:summary="@string/conf_allow_tracking_summary"
        android:title="@string/conf_allow_tracking" />
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="CONF_ENABLE_VOLUME_KEY"
        android:summary="@string/conf_use_volume_key_summary"
        android:title="@string/conf_use_volume_key" />

</PreferenceScreen>