<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rax.lightmeter"
    android:versionCode="1"
    android:versionName="1.0.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.rax.lightmeter.ActivityFirst"
            android:configChanges="keyboardHidden|orientation|keyboard|uiMode"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.rax.lightmeter.ActivityMain"
            android:configChanges="keyboardHidden|keyboard|uiMode" >
        </activity>
        <activity
            android:name="com.rax.lightmeter.ActivityAbout"
            android:configChanges="keyboardHidden|orientation|keyboard|uiMode" >
        </activity>
        <activity
            android:name="com.rax.lightmeter.ActivitySettings"
            android:configChanges="keyboardHidden|orientation|keyboard|uiMode" >
        </activity>
    </application>

</manifest>